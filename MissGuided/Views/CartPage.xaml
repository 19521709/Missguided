<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MissGuided.CartPage"
    Shell.NavBarIsVisible="True" NavigationPage.HasNavigationBar="True"
    Shell.BackgroundColor="white">

    <ContentPage.Content>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Source="bag.png"
                   Grid.Column="0"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   HeightRequest="100"
                   WidthRequest="100"
                   VerticalOptions="Start"></Image>
            <Label Text="This is the bag, where u put your items in. Just click 'add to bag'"
                   Grid.Column="1"
                   Grid.Row="0"
                   FontSize="Large"
                   TextColor="Black"></Label>
            <Label Text="1 x 43.00 USS"
                   Grid.Column="1"
                   Grid.Row="1"
                   FontSize="Large"
                   TextColor="LightGray"></Label>
            <Label Text="23.00 USS"
                   Grid.Column="2"
                   Grid.Row="1"
                   FontSize="Large"
                   FontAttributes="Bold"></Label>
        </Grid>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="edit"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <Shell.TitleView>
        <Image Source="app_logo.jpg" Scale="0.8"></Image>
    </Shell.TitleView>
</ContentPage>
